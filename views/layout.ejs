<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!--  Relevant stylesheets for given pages  -->
        <link rel="stylesheet" type="text/css" href="/css/editprofle.css"/>
        <link rel="stylesheet" type="text/css" href="/css/index.css" />
        <link rel="stylesheet" type="text/css" href="/css/editclubpage.css"/>

        <!-- Script to handle user alerts -->
        <script type="text/javascript" src="/js/userAlerts.js"></script>

        <!-- Bootstrap -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"/>
        <!-- jQuery library -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
        <!-- Latest compiled JavaScript -->
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    </head>

    <!--Main navbar layout for website-->
    <body>
        <header>
            <nav class="navbar navbar-default" style="background-color: rgb(40,40,40); border-radius: 0; height: 60px; border:none; z-index:9;">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a style="color:white; font-weight: 550; " class="navbar-brand" href="/">SWOON</a>
                    </div>

                    <ul class="nav navbar-nav navbar-left" style="border:none;">
                        <li><a href="/searchPage" style="color:white"> Find Clubs</a></li>
                    </ul>
                    <div class="collapse navbar-collapse" id="navbarstuff" style="border:none;">
                        <ul class="nav navbar-nav navbar-right" style="border:none;">
                            <ul class="nav navbar-nav">
                                <li class="dropdown navitem">
                                    <a class="dropdown-toggle" data-toggle="dropdown" href="#" style="color:white">Profile<span ></span></a>
                                    <ul class="dropdown-menu">
                                        <!-- Decides what buttons the viewer sees depending on logged status -->
                                        <% if(user != null) {%>
                                            <li><a href="#"> <%= user %> </a></li>
                                            <li><a href="/users/editUserProfile" >Edit User Profile</a></li>
                                            <li><a href="/users/logout" >Logout</a></li>
                                        <% } %>
                                        <% if(user == null) { %>
                                            <li><a href="/users/createUserProfile" >Create User</a></li>
                                            <li><a href="/users/login" >Login</a></li>
                                        <% } %>
                                    </ul>
                                </li>
                            </ul>
                        </ul>
                    </div>
                </div>

                <!-- Loads messages after an event -->
                <% if(successMsg.length > 0) {%>
                <div align="center" class="alert alert-success" id="userAlert"> <%= successMsg%> </div>
                <% } %>

                <% if(errorMsg.length > 0) {%>
                <div align="center" class="alert alert-danger" > <%= errorMsg%> </div>
                <% } %>

                <% if(error.length > 0) {%>
                <div align="center" class="alert alert-danger" > <%= error%> </div>
                <% } %>
            </nav>
        </header>

            <!-- Page content added here -->
            <%- defineContent('bodyPage')%>

        <footer class="footer">
            <p>
                &copy; 2017 Swoon
            </p>
        </footer>
    </body>
</html>