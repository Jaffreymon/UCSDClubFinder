<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!--  Relevant stylesheets for given pages  -->
        <link rel="stylesheet" type="text/css" href="/css/editprofle.css"/>
        <link rel="stylesheet" type="text/css" href="/css/index.css" />
        <link rel="stylesheet" type="text/css" href="/css/editclubpage.css"/>

        <!-- Script to handle user alerts -->
        <script type="text/javascript" src="/js/userAlerts.js"></script>

        <!-- Bootstrap -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"/>
        <!-- jQuery library -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
        <!-- Latest compiled JavaScript -->
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    </head>

    <!--Main navbar layout for website-->
    <body>
        <header>
            <nav class="navbar navbar-default" style="background-color: rgb(40,40,40); border-radius: 0; height: 60px; border:none; z-index:9;">
                <div class="container-fluid">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a style="color:white; font-weight: 550; " class="navbar-brand" href="/">SWOON</a>
                    </div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="navbarstuff" style="border:none;">
                        <ul class="nav navbar-nav">
                            <li class="navitem"><a style="color:white" class="navbutton" href="#">View All Clubs <span class="sr-only">(current)</span></a></li>
                            <li class="navitem"><a style="color:white" class="navbutton" href="#">Schedule</a></li>
                            <li class="dropdown navitem">
                                <a style="color:white" href="#" class="dropdown-toggle navbutton" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Category <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a href="#">Sports</a></li>
                                    <li><a href="#">Music</a></li>
                                    <li><a href="#">Art</a></li>
                                    <li><a href="#">Dance</a></li>
                                    <li><a href="#">Art</a></li>
                                    <li><a href="#">Fraternity/Sorority</a></li>
                                </ul>
                            </li>
                        </ul>
                        <form class="navbar-form navbar-left">
                            <div class="form-group">
                                <input id="searchbar" type="text" class="form-control" placeholder="Search">
                            </div>
                            <button type="submit" class="btn btn-default">Search</button>
                        </form>
                        <ul class="nav navbar-nav navbar-right" style="border:none;">
                            <ul class="nav navbar-nav">
                                <li class="dropdown navitem">
                                    <a class="dropdown-toggle" data-toggle="dropdown" href="#" style="color:white">Profile<span ></span></a>
                                    <ul class="dropdown-menu">
                                        <!-- Decides what buttons the viewer sees depending on logged status -->
                                        <% if(email != undefined) {%>
                                            <li><a href="#"><%= user %></a></li>
                                            <li><a href="/users/createClubProfile">Create Club</a></li>
                                            <li><a href="/users/editUserProfile" >Edit Profile</a></li>
                                            <li role="separator" class="divider"></li>
                                            <li><a href="#">Settings</a></li>
                                            <li><a href="/users/logout" >Logout</a></li>
                                        <% } %>
                                        <% if(email == undefined) { %>
                                            <li><a href="/users/createUserProfile" >Create User</a></li>
                                            <li><a href="/users/login" >Login</a></li>
                                        <% } %>
                                    </ul>
                                </li>
                            </ul>
                        </ul>
                    </div>
                </div>

                <!-- Loads messages after an event -->
                <% if(successMsg.length > 0) {%>
                <div align="center" class="alert alert-success" id="userAlert"> <%= successMsg%> </div>
                <% } %>

                <% if(errorMsg.length > 0) {%>
                <div align="center" class="alert alert-danger" > <%= errorMsg%> </div>
                <% } %>
            </nav>
        </header>

            <!-- Page content added here -->
            <%- defineContent('bodyPage')%>

        <footer class="footer">
            <p>
                &copy; 2017 Swoon
            </p>
        </footer>
    </body>
</html>