<%- contentFor('bodyPage')%>
<title>Login</title>

<h2 class="page-header">Account Login</h2>

<!-- If errors exists then show them -->
<% if(errors) {%>
    <% errors.forEach(function (errors) { %>
        <div class="alert alert-danger">
            <%= errors.msg %>
        </div>
    <% }); %>
<% } %>

<form action="/users/login" method="POST">
    <div class="login-screen">
        <div class="form-group">
            <label for="email">UCSD Email:</label>
            <input type="email" class="form-control" name="email" required>
        </div>
        <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" class="form-control" name="password" required>
            <a href="/credentialRequest">Forgot Password?</a>
        </div>
        
        <div class="row">
            <div class="col-sm-2">
                <button type="submit" id="submitBtn" class="button-login">Login</button>
            </div>
        </div>
    </div>
</form>