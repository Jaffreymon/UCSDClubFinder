<%- contentFor('bodyPage')%>
<!-- For Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
    body {
        background-color: whitesmoke;
    }
    .section {
        background-color: white;
        border: 1px solid lightgrey;
        word-wrap: break-word;
        border-radius: 5px;
        margin: 10px 0px;
        padding: 0px 15px;
    }

    #icon {
        text-align: right;
    }

    #pict {
        width: 100%;
        height: 307px;
    }

    #name {
        text-align: center;
        background-color: white;
    }
</style>

<form>
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <!-- Club Profile Image -->
                <img id="pict" src="/img/default.jpg" />
            </div>
        </div>

        <div class="row">
            <!-- Block for Meeting time and location -->
            <div class="col-sm-4">
                <div class="section" id="meeting">
                    <h3>Meetings</h3>
                    <dl>
                        <dt>Time:</dt>
                        <dd id="time">Saturday, 8:00 PM - 10:00 PM</dd>
                        <dt>Location:</dt>
                        <dd id="location">Peterson Hall 108</dd>
                    </dl>
                </div>

                <!-- Block for Contact Info -->
                <div class="section" id="contact">
                    <h3>Contact Info</h3>
                    <dl>
                        <dt>Phone:</dt>
                        <dd id="phone"><%= club.phone%></dd>
                        <dt>Email:</dt>
                        <dd id="email"><a href="mailto:someone@example.com?Subject=Hello" target="_top"><i  title= "Send Mail" class="fa fa-envelope"></i></a>  <%= club.club_email%></dd>
                    </dl>
                    <div id="icon">
                        <a href=<%= club.social_link%> <i title="Facebook" class="fa fa-facebook-official"style="font-size:24px;"></a>
                    </div>
                </div>
            </div>

            <div class="col-sm-8">
                <!-- Club Description -->
                <div class="section" id="description">
                    <h2> <%= club.name%><br> </h2>
                    <h3>Description</h3>
                    <!-- TODO Have front end automatically wrap strings that are past container's end-->
                    <p id="desc"><%= club.description%></p>
                </div>
            </div>
        </div>

    </div>
</form>