<%- contentFor('bodyPage')%>
<title>Edit Profile</title>
<script type="text/javascript" src="/js/editUserProfile.js"></script>


    <form action="/users/editUserProfile" method="POST">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                <h1 class="page-header">Edit User Profile</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <h2>User Information:</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4 form-group">
                    <label for="phone">Phone Number</label>
                    <input type="tel" class="form-control" id="phone" name="phone" value="<%= user.phone%>" maxlength="14" />
                </div>
            </div>
        <div class="row" id="submit-row">
            <div class="col-md-2 col-md-offset-10">
                <button type="submit" class="btn btn-default">Update Profile</button>
            </div>
        </div>
            <div class="row">
                <br/>
                <br/>
                <br/>
            </div>
        </div>   
    </form>

