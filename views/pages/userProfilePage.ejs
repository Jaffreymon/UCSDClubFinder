<%- contentFor('bodyPage')%>
<!-- For Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<title>Your Profile</title>

<style>
  #contact, #clubs, #description {
        background-color: white;
        border: 1px solid lightgrey;
        word-wrap: break-word;
        border-radius: 5px;
        margin: 10px 0px;
        padding: 0px 15px;
    }

    #icon {
        text-align: right;
    }

    #pict {
        width: 100%;
        height: 307px;
    }

    #name {
        text-align: center;
        background-color: white;
    }
    #changeButtonDiv {
        margin-bottom: 5px;
    }

  input#clubNameLink {
      background: none;
      outline: none;
      border: none;
      color: #337ab7;
      font-size: 20px;
      font-weight: bold;
      font-family: "Courier New", Cour, Monospace;
      font-style: italic;
  }

  #clubNameLink:hover{
      text-decoration: none;
      color: #3e9ae6;
  }

</style>

<div class="container">    
  <div class="row">  
    <!-- Block for Meeting time and location -->
        
        <!-- Block for Contact Info -->
        <div class="col-sm-4 section">
            <div id="contact">
                <h2 style="text-align: left"><%= user.fname + " " + user.lname %><br> </h2>
                <h3>Contact Info</h3>
                <dl>
                    <dt>Phone:</dt>
                    <!-- Formats a user's phone to be readable -->
                    <dd id="phone"><%= "(" + user.phone.substring(0,3) + ")" + user.phone.substring(3,6) + "-" + user.phone.substring(6) %></dd>
                    <dt>Email:</dt>
                    <dd id="email"><%= user.email %></dd>
                </dl>

                <form action="/users/editUserProfile">
                    <div id="changeButtonDiv">
                        <input type="submit" class="btn btn-default" id="createbtn" value="Change Info">
                    </div>
                </form>
            </div>
        </div>
    
      
    <div class="col-sm-8">  
        <!-- Club Description --> 
         <div id="clubs">
                <h3>Created Clubs:</h3>
                <ul>
                    <!-- Shows all clubs a profile has created -->
                    <% if(clubs) {%>
                        <% for( let idx in clubs) { %>
                            <div class="search-result">
                                <form id="search-result-box" action="/clubPage" method="POST">
                                    <li style="list-style-type: none;">
                                        <!-- Shows a link to all clubs this user has created -->
                                        <input id="clubNameLink" type="submit" name="clubname" value="<%= clubs[idx].name%>">
                                    </li>
                                </form>
                            </div>
                        <% } %>
                    <% } else if (clubs === null){ %>
                        <li>No clubs Created</li>
                    <% } %>
                </ul>
            </div>
        
    </div>
      </div>
  </div>  